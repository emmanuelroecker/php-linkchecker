{
    "name": "glicer/link-checker",
    "type": "library",
    "description": "Check broken links in html files, sitemap.xml and robots.txt",
    "keywords": ["html", "broken", "links"],
    "homepage": "https://github.com/emmanuelroecker/php-linkchecker",
    "license": "MIT",
    "authors": [
        {
            "name": "Emmanuel ROECKER",
            "homepage": "http://dev.glicer.com"
        },
        {
            "name": "Rym BOUCHAGOUR",
            "homepage": "http://dev.glicer.com"
        }
    ],
    "require": {
        "php": ">=5.5",
        "guzzlehttp/guzzle": "~6.2",
        "glicer/simply-html": "~1.0",
        "symfony/finder": "~2.3 || ~3.0",
        "symfony/console": "~2.3 || ~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.5",
        "symfony/process": "~2.3 || ~3.0",
        "satooshi/php-coveralls": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "GlLinkChecker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GlLinkChecker\\Tests\\": "tests/"
        }
    }
}
